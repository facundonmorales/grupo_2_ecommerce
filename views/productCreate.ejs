    <%- include("./partials/headerHome")  %> 
    <main>
        <div class="Registro">
            <div id="errores"></div>
            <h1>Crear Productos</h1>
            <br>
            <form action="/productos/crear" method="POST" enctype="multipart/form-data">
            <label for="nombre">Ingresa el nombre del producto</label>
            <input type="text" placeholder="nombre" name="nombre" id="nombre"
            value="<%= locals.oldData ? oldData.nombre : null %>">
            
            <% if(locals.errors && errors.nombre){ %> 
                <div class="text-danger">
                    <%= errors.nombre.msg  %> 
                </div>
                <% } %>
                <br>
            <label for="precio">Ingresa el precio del Producto</label>
            <input type="text" placeholder="precio" name="precio" id="precio"
            value="<%= locals.oldData ? oldData.precio : null %>">
            <% if(locals.errors && errors.precio){ %> 
                <div class="text-danger">
                    <%= errors.precio.msg  %> 
                </div>
                <% } %>
                <br>
                <input type="file" name="fotoProducto" id="fotoProducto">
                <% if(locals.errors && errors.fotoProducto){ %> 
                    <div class="text-danger">
                        <%= errors.fotoProducto.msg  %> 
                    </div>
                    <% } %>
                <br>
                <label for="caracteristicas">Ingresa las caracteristicas del Producto</label>
                <input type="text" placeholder="caracteristicas" name="caracteristicas" id="caracteristicas"
                value="<%= locals.oldData ? oldData.caracteristicas : null %>">
            
            <% if(locals.errors && errors.caracteristicas){ %> 
                <div class="text-danger">
                    <%= errors.caracteristicas.msg  %> 
                </div>
                <% } %>
            <br>
            <br>
            <button type="submit" class="boton"> Crear</button>
        </form>
        </div>

  </main>  
